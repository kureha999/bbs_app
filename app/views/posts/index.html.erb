<div class="min-h-screen bg-gradient-to-r from-blue-300 via-purple-300 to-pink-300 p-8">
  <h1 class="text-4xl font-bold text-center text-blue-800 mb-8">投稿一覧</h1>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% @posts.each do |post| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <h2 class="text-2xl font-bold text-purple-700 mb-3">
          <%= link_to post.title, post, class: "hover:underline" %>
        </h2>
        <p class="text-gray-700 mb-4"><%= post.content %></p>
        <p class="text-sm text-gray-500">投稿者: <%= post.user.email %></p>
      </div>
    <% end %>
  </div>

  <% if logged_in? %>
    <div class="mt-8 text-center">
      <%= link_to '新規投稿', new_post_path, class: "inline-block bg-green-500 text-white py-2 px-4 rounded-full shadow-md hover:bg-green-600 transition-colors" %>
    </div>
  <% end %>
</div>

